{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es5",
        "types": [
            "mocha-typescript",
            "mocha",
            "chai",
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}